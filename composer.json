{
    "name": "mortenson/psalm-plugin-drupal",
    "description": "Template to create psalm-plugin projects from",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Mortenson",
            "email": "samuel@mortenson.coffee"
        }
    ],
    "require": {
        "vimeo/psalm": "dev-master",
        "psalm/plugin-symfony": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "weirdan/codeception-psalm-module": "*"
    },
    "extra": {
        "psalm": {
            "pluginClass": "mortenson\\PslamPluginDrupal\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "mortenson\\PslamPluginDrupal\\": [
                "."
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mortenson\\PslamPluginDrupal\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "./vendor/bin/codecept run"
    }
}
